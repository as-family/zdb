{
    "version": 3,
    "configurePresets": [
        {
            "name": "gcc-13-config",
            "displayName": "GCC 13 Preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/gcc-13",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            },
            "environment": {
                "CC": "gcc-13",
                "CXX": "g++-13"
            }
        },
        {
            "name": "llvm-18-config",
            "displayName": "LLVM 18 Preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/llvm-18",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_COMPILER": "clang++-18",
                "CMAKE_CXX_FLAGS": "-stdlib=libc++",
                "CMAKE_EXE_LINKER_FLAGS": "-lc++abi  -fuse-ld=lld",
                "CMAKE_SHARED_LINKER_FLAGS": "-lc++abi  -fuse-ld=lld",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            },
            "environment": {
                "CC": "clang-18",
                "CXX": "clang++-18"
            }
        },
        {
            "name": "gcc-14-config",
            "displayName": "GCC 15 Config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/gcc-14",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc-14",
                "CMAKE_CXX_COMPILER": "g++-14",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
            },
            "environment": {
                "CC": "gcc-14",
                "CXX": "g++-14"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-13-build",
            "configurePreset": "gcc-13-config"
        },
        {
            "name": "llvm-18-build",
            "configurePreset": "llvm-18-config"
        },
        {
            "name": "gcc-14-build",
            "configurePreset": "gcc-14-config"
        }
    ],
    "testPresets": [
        {
            "name": "gcc-13-test",
            "description": "",
            "displayName": "",
            "configurePreset": "gcc-13-config"
        },
        {
            "name": "gcc-14-test",
            "description": "",
            "displayName": "",
            "configurePreset": "gcc-14-config"
        },
        {
            "name": "llvm-18-test",
            "description": "",
            "displayName": "",
            "configurePreset": "llvm-18-config"
        }
    ]
}
