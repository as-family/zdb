{
    "version": 3,
    "configurePresets": [
        {
            "name": "gcc-13",
            "displayName": "GCC 13 Preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/gcc-13",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc-13",
                "CMAKE_CXX_COMPILER": "g++-13",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            },
            "environment": {
                "CC": "gcc-13",
                "CXX": "g++-13",
                "VCPKG_ROOT": "${sourceDir}/vcpkg"
            }
        },
        {
            "name": "llvm-18",
            "displayName": "LLVM 18 Preset",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/llvm-18",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang-18",
                "CMAKE_CXX_COMPILER": "clang++-18",
                "CMAKE_CXX_FLAGS": "-stdlib=libc++",
                "CMAKE_EXE_LINKER_FLAGS": "-lc++abi  -fuse-ld=lld",
                "CMAKE_SHARED_LINKER_FLAGS": "-lc++abi  -fuse-ld=lld",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            },
            "environment": {
                "CC": "clang-18",
                "CXX": "clang++-18",
                "VCPKG_ROOT": "${sourceDir}/vcpkg"
            }
        },
        {
            "name": "gcc-14",
            "displayName": "GCC 14 Config",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/gcc-14",
            "toolchainFile": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc-14",
                "CMAKE_CXX_COMPILER": "g++-14",
                "CMAKE_CXX_STANDARD": "23",
                "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
                "VCPKG_TARGET_TRIPLET": "x64-linux"
            },
            "environment": {
                "CC": "gcc-14",
                "CXX": "g++-14",
                "VCPKG_ROOT": "${sourceDir}/vcpkg"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "gcc-13",
            "configurePreset": "gcc-13"
        },
        {
            "name": "llvm-18",
            "configurePreset": "llvm-18"
        },
        {
            "name": "gcc-14",
            "configurePreset": "gcc-14"
        }
    ],
    "testPresets": [
        {
            "name": "gcc-14",
            "description": "",
            "displayName": "",
            "configurePreset": "gcc-14"
        }
    ]
}
